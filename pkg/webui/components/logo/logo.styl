.container
  display: flex
  align-items: center
  flex: 0 0 auto

  img
    height: 100%
    width: 100%
    object-fit: contain

  &:not(.unlock-size)
    img:first-child
      height: 1.6rem

    img:last-child
      width: 3rem
      padding: $cs.s 0

  +media-query-min($bp.xs)
    img:first-child
      display: block
    img:last-child
      display: none

  +media-query($bp.xs)
    img:first-child
      display: none
    img:last-child
      display: block
