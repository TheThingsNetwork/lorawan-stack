.container
  display: flex
  align-items: center
  flex: 0 0 auto

  img
    height: 100%
    width: 100%
    object-fit: contain

  .logo-container
    display: flex
    align-items: center
    line-height: 0

    img
      width: 100%

  .logo
    display: flex
    align-items: center

    +media-query-min($bp.xs)
      img:first-child
        display: block
      img:last-child
        display: none

    +media-query($bp.xs)
      img:first-child
        display: none
      img:last-child
        display: block
