.table
  width: 100%
  table-layout: fixed
  border-collapse: separate
  border-spacing: 0 $cs.xs

  tr
    height: 2.5rem

  th
    text-align: left
    font-weight: 400
    color: var(--c-text-neutral-semilight)
    min-width: 20rem
    padding-right: $cs.s

  tr.group-heading
    height: 2.2rem
    vertical-align: top

    &:not(:first-child)
      height: 3.7rem
      vertical-align: middle
    th
      color: var(--c-text-neutral-heavy)
      font-weight: $fw.bold
      white-space: nowrap

.sub th
  padding-left: $cs.l

.not-available
  color: var(--c-text-neutral-light)

.tooltip-icon
  color: var(--c-icon-neutral-light)
  margin-bottom: -4px
  margin-left: 2px
