.table
  width: 100%

  tr
    height: 3rem

  th
    text-align: left
    font-weight: 400
    color: var(--c-text-neutral-semilight)
    padding-right: $cs.xs
    width: 50%

  +media-query($bp.md)
    margin-bottom: $ls.xs

tr.group-heading
  height: 2.8rem
  vertical-align: top

  &:not(:first-child)
    height: 5.6rem
    vertical-align: middle
  th
    color: var(--c-text-neutral-heavy)
    font-weight: $fw.bold
    width: 33%
    white-space: nowrap
    +media-query($bp.sm)
      width: 50%

.sub th
  padding-left: $cs.l

.not-available
  color: var(--c-text-neutral-light)
