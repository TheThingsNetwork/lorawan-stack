.data-sheet
  &-header
    height: 2.5rem
    color: var(--c-text-neutral-heavy)
    font-weight: $fw.bold
    white-space: nowrap
    margin-bottom: $cs.xs

  &-row
    &-heading
      height: 2.5rem
      text-align: left
      font-weight: 400
      color: var(--c-text-neutral-semilight)

    &-content
      height: 2.5rem
      display: flex
      align-items: center
      justify-content: space-between
      margin-bottom: $cs.xs

      &-value
        flex-grow: 1
        text-align: left
        max-width: 40%

.not-available
  color: var(--c-text-neutral-light)

.tooltip-icon
  color: var(--c-icon-neutral-light)
  margin-bottom: -4px
  margin-left: 2px

@container panel (max-width: 460px)
  .data-sheet-row-heading
    height: 1.7rem
  .data-sheet-row-content
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
    height: fit-content
  .data-sheet-row-content:last-child
    margin-bottom: $cs.l
  .data-sheet-row-content-value
    max-width: 100%