.link
  position: relative
  padding: $cs.xl $cs.m
  font-size: $fs.m
  display: inline-flex
  align-items: center
  color: var(--c-text-neutral-heavy)

  pseudo-border-animated(3px, var(--c-border-neutral-light))

  &:not(.link-active):hover
    area-hover()

  & > .icon
    color: var(--c-icon)

  &-active, &-active > .icon
    color: var(--c-text-brand-normal)

  &-active
    area-active()
    $hover-color = var(--c-text-brand-normal)

    +pseudo-border(3px, var(--c-text-brand-normal))
      transform: scaleX(1)

    &:hover:before
      background: $hover-color

    &:hover
      color: $hover-color

.icon
  margin-right: $cs.xs
