.switcher-container
  border-radius: $br.l
  border: 1px solid var(--c-border-neutral-light)
  background: var(--c-bg-neutral-min)
  box-shadow: 0px 2px 7px 1px rgba(0, 0, 0, .06)
  display: flex
  gap: $cs.xxs
  justify-content: center
  padding: $cs.xxs

  .link
    border-radius: $br.m
    text-decoration: none
    color: var(--c-text-neutral-semilight)
    display: flex
    justify-content: center
    width: 100%
    transition: background 80ms ease-in-out
    position: relative
    padding: $cs.s $cs.xxs

    &.active
      background: var(--c-bg-neutral-heavy)
      color: var(--c-text-neutral-min)
      font-weight: $fw.bold

    &:hover
      text-decoration: none
      &:not(.active)
        background: var(--c-bg-neutral-light)

  .icon
    display: none
    font-size: $fs.xl
    font-weight: 300
