.header-container
  display: flex
  justify-content: space-between
  align-items: center
  gap: $cs.m

  &.is-minimized
    flex-direction: column
    gap: $cs.xs

    .logo
      display: none

    .mini-logo
      display: flex

  .minimize-button
    transition: none

  &:not(.is-minimized)
    .minimize-button
      margin-top: - $cs.xxs
      margin-right: - $cs.s

  .logo
    width: 9.57rem

  .mini-logo
    display: none
    width: 2.8rem
    padding: $cs.s 0
