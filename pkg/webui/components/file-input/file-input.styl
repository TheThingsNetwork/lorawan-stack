.container
  display: flex
  align-items: center
  justify-items: flex-start
  flex-wrap: wrap
  margin-bottom: $cs.xxs

  .center
    justify-content: center

.input
  visually-hidden()

.error
  color: var(--c-bg-error-normal)
  &-icon
    color: var(--c-bg-error-normal)
    margin-right: $cs.xxs

.image
  height: 8rem
  width: 8rem
  object-fit: contain
  margin-right: $cs.m

.notification
  flex-basis: 100%


.button-group-center
  flex-wrap: wrap
