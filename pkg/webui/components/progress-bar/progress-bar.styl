.container
  width: 100%

.bar
  width: 100%
  height: 1rem
  border: var(--c-border-neutral-semibold)
  border-radius: $br.xs

.filler
  background-color: var(--c-text-brand-normal)
  border: 1px solid white
  height: 100%
  box-sizing: border-box
  transition: width $ad.s

  &.warn
    background-color: var(--c-text-warning-normal)

  &.limit
    background-color: var(--c-bg-error-normal)

.status
  horizontalize()
  div
    display: flex

.progress-bar-values
  display: flex
  justify-content: space-between
  margin-bottom: $cs.xs
