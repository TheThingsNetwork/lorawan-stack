.details
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: flex-end
  margin-top: -2rem

  &-code
    width: 100%
    background-color: var(--c-bg-neutral-semilight)
    color: var(--c-text-neutral-heavy)
    font-size: $fs.s
    padding: $cs.s
    color: var(--c-text-neutral-heavy)
    margin: (-1 * $ls.m) 0 0 0
    box-sizing: border-box

  &-button
    // stylelint-disable-next-line declaration-no-important
    margin-right: 0 !important
