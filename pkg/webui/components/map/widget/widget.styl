.wrapper
  padding-top: $ls.xxs

.header
  display: flex
  align-items: center
  justify-content: space-between
  margin-bottom: $cs.xs

.title-message
  font-weight: 600
  margin-right: $cs.xs

.change-location-message
  padding-right: $cs.xxs

.map-disabled
  border-normal()
  display: flex
  background-image: url('../../../assets/img/layout/bg/ttn-console-map.png')
  background-repeat: no-repeat
  background-size: cover
  height: 25rem
  width: 100%

  span
    color: $tc-subtle-gray
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    text-align: center
