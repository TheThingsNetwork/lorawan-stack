.shortcut
  display: flex
  gap: $cs.m
  flex-direction: column
  align-items: center
  justify-content: center
  padding: $cs.s $cs.m
  transition: $ad.m background ease-in, $ad.m display ease-out
  text-decoration: none
  height: 10.7rem
  border-radius: $br.l
  background: var(--c-bg-brand-normal)
  color: var(--c-text-neutral-min)
  font-size: $fs.m
  font-weight: $fwv2.semibold

  span.icon
    font-size: 2rem
    display: block

  span.add-icon
    font-size: 2.5rem
    display: none

  .title
    display: block

  &:hover
    cursor: pointer
    background: var(--c-bg-brand-normal-hover)

    .title
      display: none

    span.icon
      font-size: 2rem
      display: none

    span.add-icon
      font-size: 2.5rem
      display: block
