.wrapper
  height: 100%
  width: 100%
  position: relative

.list
  padding: 0

  &-bordered
    border-normal()
    border-radius: $br.s

  &-empty
    display: flex
    align-items: center
    justify-content: center
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

  &-empty-message
    color: $tc-subtle-gray

ul.list,
ol.list
  list-style: none
  margin: 0

.header
  border-normal('bottom')

.footer
  border-normal('top')

.item,
.header
  &-small
    padding: $cs.xxs $cs.xs

  &-default
    padding: $cs.xs $cs.s

  &-large
    padding: $cs.s $cs.m
