.button
  reset-button()
  padding: $cs.s
  margin-left: -($cs.s)
  margin-bottom: $ls.xxs

.title
  margin: 0
  margin-right: $cs.xs
  display: inline-block
  color: $tc-black
  user-select: auto

.icon
  color: $c-icon-fill
  font-size: $fs.xl
  user-select: none

.content
  display: none
  overflow: hidden

  &.expanded
    display: block
