.container
  display: flex

  &:not(:last-child):after
    material-icon()
    nudge('down', 1px)
    margin: 0 $cs.xxs
    content: 'keyboard_arrow_right'
    color: var(--c-text-neutral-light)

.link
  one-liner()
  text-decoration: none
  color: var(--c-text-neutral-light)
  display: flex
  align-items: center
  +focus-visible()
    text-decoration: underline
    color: var(--c-text-neutral-heavy)

.last
  one-liner()
  display: flex
  align-items: center
  color: var(--c-text-neutral-heavy)
  font-weight: $fw.bold
  +media-query($bp.s)
    &:last-child
      padding-right: $ls.xxs
