$l = $cs.xl
$s = $cs.l
$xs = $cs.m

.box
  text-align: center
  display: block
  opacity: 0
  transition: opacity $ad.m

  &.visible
    opacity: 1

  &.micro
    height: $xs

  &.inline
    display: flex
    justify-content: flex-start
    align-items: center

  &.right
    &:not(.inline)
      text-align: right

.spinner
  width: $l
  height: $l
  padding: 1px

.bar,
.circle
  stroke-width: 4
  fill: none
  vector-effect: non-scaling-stroke

.circle
  stroke: rgba(100, 100, 100, .1)

.bar
  stroke-dasharray: 40 50
  stroke-linecap: round

  animation: rotate .6s infinite linear

.stop
  stop-color: var(--c-icon-brand-normal)

  .faded &
    stop-color: var(--c-icon-neutral-normal)

@keyframes rotate
  from
    transform: rotate(0)
  to
    transform: rotate(360deg)

.message
  color: var(--c-text-neutral-light)
  margin-left: $cs.xs

.center
  &:not(.inline)
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    margin: auto
    height: fit-content
  &.inline
    justify-content: center

.small .spinner
  width: $s
  height: @width

.micro .spinner
  width: $xs
  height: @width

  .bar,
  .circle
    stroke-width: 3
