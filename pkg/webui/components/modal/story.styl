// The Authorize story has a more sophisticated styling which is outsourced
// to this stylus file

.left
  flex-basis: 65%
  padding-right: $cs.m
  +media-query($bp.s)
    flex-basis: 100%
    flex-grow: 0
    margin-bottom: $ls.m

  ul
    text-margin-top()
    padding-left: 0

  li
    display: flex
    align-items: flex-start

  li > span
    color: $c-info
    margin-right: $cs.xxs
    nudge('down', 3px)

.right
  +media-query($bp.s)
    flex-grow: 0
    padding-top: 3rem
    background: url('../../assets/misc/oauth-arrow-hor.svg') no-repeat
  +media-query-min($bp.s)
    flex-basis: 35%
    padding-left: 3rem
    background: url('../../assets/misc/oauth-arrow.svg') no-repeat

  h3
    one-liner()
    margin-bottom: $cs.m
