.container
  display: flex
  position: relative
  padding-left: 1rem + $cs.xs
  margin-bottom: 12px
  cursor: pointer
  user-select: none

  // Hide default checkbox
  input
    position: absolute
    opacity: 0
    cursor: pointer

  &:hover input ~ span
    background-color: $c-backdrop

  & input:checked ~ span
    border-color: $c-active-blue
    background-color: $c-active-blue

  &:hover input:checked ~ span, input:checked:focus ~ span
      background-color: lighter($c-active-blue)
      border-color: lighter($c-active-blue)

  // Show the checkmark when checked
  input:checked ~ span:after
    display: block

  input:focus ~ span
    border-color: $c-active-blue

// Custom checkbox
.checkmark
  border-input()
  border-radius: $br.s
  position: absolute
  top: 4px
  left: 0
  width: 1.08rem
  height: 1.08rem

  // Style the checkmark/indicator
  &:after
    content: ''
    position: absolute
    display: none
    left: 5px
    top: 1px
    width: 3px
    height: 9px
    border: solid white
    border-width: 0 2px 2px 0
    -webkit-transform: rotate(45deg)
    -ms-transform: rotate(45deg)
    transform: rotate(45deg)

.disabled
  opacity: .4
  cursor: not-allowed

