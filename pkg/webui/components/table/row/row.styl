.row
  display: table-row
  color: var(--c-text-neutral-light)
  transition: background-color $ad.xs linear

  &-body&:not(:last-child)
    border-bottom: 1px solid var(--c-border-neutral-light)

  &-footer
    display: flex

.clickable
  cursor: pointer
  transition: background-color $ad.xs linear
  color: unset

  &:hover
    background-color: var(--c-bg-neutral-extralight-hover)
