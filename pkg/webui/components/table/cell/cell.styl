.cell
  display: table-cell
  padding: 0 0 0 $cs.xs
  vertical-align: middle
  line-height: 1.15

  &:first-child
    font-weight: 600

  &:not(&-centered):not(&-left)
    &:last-child
      text-align: right

  &-centered
    text-align: center

  &-left
    text-align: left

  &-right > *
    text-align: right
    justify-content: flex-end

  &-head
    height: 3rem
    text-transform: uppercase
    font-weight: 600
    font-size: $fsv2.s
    color: var(--c-text-neutral-light)
    white-space: nowrap

  &-data
    height: 4rem
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

    .cell-left
      padding: $cs.l

  &-head:not(&-centered):not(&-right)
    text-align: left
