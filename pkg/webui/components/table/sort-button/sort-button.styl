.button
  reset-button()
  display: flex
  align-items: center
  line-height: 1
  width: 100%
  text-align: inherit
  text-transform: uppercase

  &-center
    justify-content: center

  svg.icon
    width: .75rem
    height: 1rem
    margin-left: 3.5px

  .icon
    font-size: 1rem
    transition: transform $ad.m ease-in-out
