ul.dropdown
  border-normal()
  z-index: $zi.nav
  right: 0
  position: absolute
  background: white
  padding: 0
  min-width: 14rem
  z-index: $zi.dropdown
  margin: 0

  &.larger
    li.dropdown-item
      & > a, & > button
        padding: $cs.l

  hr
    margin-top: 0
    height: .4rem

  li.dropdown-item
    display: block
    margin-bottom: 0

    button
      reset-button()

    & > a, & > button
      one-liner()
      color: $tc-deep-gray
      text-decoration: none
      padding: $cs.m
      width: 100%

      span:last-child
        nudge('down')

    .icon
      margin-right: $cs.xs

    &:not(:last-child)
      border-normal('bottom')

    &:hover
      background-color: $c-active-blue

      a, button
        color: white

      .icon
        color: white

.active
  border-left: $c-active-blue 5px solid
  box-sizing: border-box
  span
    color: $c-active-blue
