make-utilities($name, $theme)
  $dict = lookup('$' + $name)
  for $key, $val in $dict[$theme][color]
    $value = convert('var(--c-' + $key + ')')
    if split('-', $key)[0] == 'bg'
      .c-{$key}
        background-color: $value
      .hover\\:c-{$key}:hover
        background-color: $value
      .active\\:c-{$key}:active
        background-color: $value
      .forcus\\:c-{$key}:focus
        background-color: $value
    else if split('-', $key)[0] == 'text' or split('-', $key)[0] == 'icon'
      .c-{$key}
        color: $value
      .hover\\:c-{$key}:hover
        color: $value
      .active\\:c-{$key}:active
        color: $value
      .focus\\:c-{$key}:focus
        color: $value
    else if split('-', $key)[0] == 'border'
      .c-{$key}
        border-color: $value
      .hover\\:c-{$key}:hover
        border-color: $value
      .active\\:c-{$key}:active
        border-color: $value
      .focus\\:c-{$key}:focus
        border-color: $value

:global
  make-utilities('tokens', 'theme-light')
