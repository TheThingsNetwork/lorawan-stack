.filters
  display: flex
  justify-content: space-between
  align-items: center
  margin-bottom: $cs.s
  flex-wrap: wrap
  margin-left: 0

  +media-query($bp.md)
    gap: $cs.m

  &.top-rule
    border-normal('bottom')
    padding-bottom: 0

    .filters-left
      padding-bottom: 0

    +media-query($bp.md)
      .filters-left
        padding-bottom: $cs.s
        flex-basis: 100%

      .tabs
        border-normal('bottom')

      &.top-rule
        border: none

  &-left
    flex-basis: auto

  &-right
    flex: 1
    display: flex
    justify-content: flex-end
    align-items: center
    gap: $cs.xs

    +media-query($bp.md)
      justify-content: flex-start
      max-width: none
      flex-basis: 100%
      flex-wrap: wrap

      .search-bar
        width: 100%

.action-items
  display: flex
  flex-flow: wrap
  gap: $cs.xs

.search-bar
  min-width: 15rem

.page
  margin-top: $ls.s

.tabs
  margin: 0

.table-title
  padding-left: $cs.m
  color: var(--c-text-neutral-heavy)

  +media-query($bp.md)
    padding-bottom: $cs.s
    padding-left: 0

.error-message
  z-index: $zi.overlay + 1
  position: absolute
  top: 5rem
  left: 50%
  width: 35rem
  max-width: 90vw
  transform: translate(-50%, 0)
  color: var(--c-text-error-normal)

.add-button
  font-weight: $fw.medium
