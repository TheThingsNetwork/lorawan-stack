.downlink
  div
    width: 1.2rem
    height: 1.2rem
    display: flex
    color: var(--c-bg-neutral-min)
    border-radius: 100%
    justify-content: center
    align-items: center
    font-size: $fs.xs
    font-weight: $fw.bolder

    &:not(.active)
      border-normal()
      box-sizing: border-box
      color: var(--c-text-neutral-light)

    &.active
      background-color: var(--c-bg-success-normal)
