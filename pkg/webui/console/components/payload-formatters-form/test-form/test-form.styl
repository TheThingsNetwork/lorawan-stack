.h-rule
  margin: 0

.info-section
  margin: $cs.s 0

  .icon
    margin-right: $cs.xs

  .message,
  .icon
    color: var(--c-icon-neutral-normal)

  &-error
    .icon,
    .message
      color: var(--c-bg-error-normal)

  &-warning
    .icon,
    .message
      color: var(--c-text-warning-normal)

  &-valid
    .icon,
    .message
      color: var(--c-bg-success-normal)

.submit-button
  flex-shrink: 0

.top-row
  align-items: end

  .payload
    // stylelint-disable-next-line declaration-no-important
    flex-grow: 1 !important
