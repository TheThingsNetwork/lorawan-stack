.panel-view
  .menu
    padding: 0

.panel-view-menu-item
  margin-bottom: 15px

.link
  text-decoration: none
  color: var(--c-text-neutral-heavy)
  display: flex
  align-items: center
  padding: $cs.s $cs.m
  position: relative

  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 3px
    height: 100%
    background-color: var(--c-icon-neutral-normal)
    transform: scaleY(0)
    transform-origin: center
    transition: transform $ad.m ease-in-out, background-color $ad.s linear

  &:hover:not(.active)::after
    transform: scaleY(1)

  &.active
    font-weight: $fw.bold
    background-color: var(--c-bg-neutral-light)

    &::before
      content: ''
      z-index: $zi.slight
      position: absolute
      bottom: 0
      left: 0
      display: block
      height: 100%
      width: 3px
      // stylelint-disable-next-line declaration-no-important
      background: var(--c-text-brand-normal) !important

  &:hover,
  &:visited
    color: var(--c-text-neutral-heavy)
    text-decoration: none

  &:hover
    background-color: var(--c-bg-neutral-semilight)
