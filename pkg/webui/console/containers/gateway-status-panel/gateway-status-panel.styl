.gtw-status-panel
  &-upper-container
    display: flex
    gap: $ls.xl
    justify-content: space-between

    +media-query($bp.md)
      gap: $cs.l
    +media-query($bp.xs)
      flex-direction: column
      justify-content: start

  &-lower-container
    display: flex
    gap: $ls.xl
    justify-content: space-between

    +media-query($bp.md)
      gap: $cs.m

  &-icon
    background-color: var(--c-bg-error-light)
    color: var(--c-text-error-normal)

  &-tooltip
    margin-bottom: -4px
    margin-left: 2px

  &-divider
    border-bottom: 1px solid var(--c-border-neutral-light)
    margin-top: $cs.xl
    margin-bottom: $cs.xl
    height: 0px

  &-tag
    height: 2.5rem
    margin-top: $cs.xl
    div
      border-radius: $br.m
      padding: $cs.s $cs.m
      color: var(--c-text-neutral-heavy)
      background-color: var(--c-bg-neutral-light)
      font-weight: 600
      width: fit-content
      line-height: 1
      position: absolute
      bottom: 28px

  &-round-trip-time
    &-bar
      background: linear-gradient(90deg, #B3FAA9 33%, #FFE096 33%, #FFE096 66%, #FFD1CA 66%, #FFD1CA 100%)
      height: $cs.s
      width: 100%
      border-radius: $br.m
      position: relative
      padding-top: 2px
      padding-bottom: 2px
      margin-top: $cs.m
      margin-bottom: $cs.xxs

      &-pointer
        width: $cs.xxs
        height: 100%
        top: 0
        position: absolute

    &-tag
      font-size: $fs.xxl
      font-weight: $fw.bold
      width: fit-content
      border-radius: $br.s

  &-transmissions
    display: flex
    align-items: center
    justify-content: space-between
    gap: $cs.m
    margin-bottom: $cs.m
    margin-top: $cs.l
    font-size: $fs.s

    &:first-child
      margin-top: 0

    &:last-child
      margin-bottom: 0

    +media-query($bp.xs)
      flex-direction: column
      align-items: start
      gap: $cs.xxs

  &-duty-cycle
    display: flex
    align-items: center
    justify-content: space-between
    gap: $cs.m
    font-size: $fs.s

    +media-query($bp.xxs)
      flex-direction: column
      align-items: start

@container panel (max-width: 485px)
  .gtw-status-panel-upper-container
    gap: $cs.l
    flex-direction: column
    justify-content: start

  .gtw-status-panel-lower-container
    gap: $cs.m

  .gtw-status-panel-transmissions
    flex-direction: column
    align-items: start
    gap: $cs.xxs

@container panel (max-width: 385px)
  .gtw-status-panel-duty-cycle
    flex-direction: column
    align-items: start
    gap: $cs.xs
