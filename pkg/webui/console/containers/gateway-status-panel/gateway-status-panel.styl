.gtw-status-panel
  height: 100%
  &-upper-container
    display: flex
    gap: $ls.xl
    justify-content: space-between

    +media-query($bp.md)
      gap: $cs.l
    +media-query($bp.xs)
      flex-direction: column
      justify-content: start

  &-lower-container
    display: flex
    gap: $ls.xl
    justify-content: space-between

    +media-query($bp.md)
      gap: $cs.m
    +media-query($bp.sm)
      gap: 0
      flex-direction: column

  &-icon
    background-color: var(--c-bg-error-light)
    color: var(--c-text-error-normal)

  &-tooltip
    margin-bottom: -4px
    margin-left: 2px

  &-tag-mobile
    display: none

  &-tag
    height: 2.5rem
    margin-top: $cs.xl
    div
      border-radius: $br.m
      padding: $cs.s $cs.m
      color: var(--c-text-neutral-heavy)
      background-color: var(--c-bg-neutral-light)
      font-weight: 600
      width: fit-content
      line-height: 1
      position: absolute
      bottom: 28px

  &-round-trip-time
    &-bar
      height: $cs.s
      width: 100%
      border-radius: $br.m
      position: relative
      padding-top: 2px
      padding-bottom: 2px
      margin-top: $cs.l
      margin-bottom: $cs.xxs
      overflow: hidden

      &-pointer
        width: $cs.xxs
        height: 100%
        top: 0
        position: absolute

    &-tag
      font-size: $fs.xxl
      font-weight: $fw.bold
      width: fit-content
      border-radius: $br.s

  &-transmissions
    display: flex
    align-items: center
    justify-content: space-between
    gap: $cs.m
    margin-bottom: $cs.m
    margin-top: $cs.l
    font-size: $fs.s

    &:first-child
      margin-top: 0

    &:last-child
      margin-bottom: 0

  &-duty-cycle
    display: flex
    align-items: center
    justify-content: space-between
    gap: $cs.m
    font-size: $fs.s
    margin-top: $cs.l

.gtw-status-panel-divider
  border-bottom: 1px solid var(--c-border-neutral-light)
  margin-top: $cs.xl
  margin-bottom: $cs.xl
  height: 0px
  width: 100%

.gtw-status-panel-divider-mobile
  display: none
  border-bottom: 1px solid var(--c-border-neutral-light)
  margin-top: $cs.xl
  margin-bottom: $cs.xl
  height: 0px
  width: 100%

@container panel (max-width: 420px)
  .gtw-status-panel-transmissions
    flex-direction: column
    align-items: start
    gap: $cs.xxs

  .gtw-status-panel-duty-cycle
    flex-direction: column
    align-items: start
    gap: $cs.xs

@container panel (max-width: 385px)
  .gtw-status-panel-upper-container
    gap: 0
    flex-direction: column
    justify-content: start

  .gtw-status-panel-lower-container
    gap: 0
    flex-direction: column
    justify-content: start

  .gtw-status-panel-divider-mobile
    display: block

  .gtw-status-panel-transmissions
    flex-direction: row
    align-items: center
    justify-content: space-between
    gap: $cs.m

  .gtw-status-panel-duty-cycle
    flex-direction: row
    align-items: center
    justify-content: space-between
    gap: $cs.m

  .gtw-status-panel-tag
    display: none

  .gtw-status-panel-tag-mobile
    height: 2.5rem
    margin-top: $cs.xl
    display: block
    div
      border-radius: $br.m
      padding: $cs.s $cs.m
      color: var(--c-text-neutral-heavy)
      background-color: var(--c-bg-neutral-light)
      font-weight: 600
      width: fit-content
      line-height: 1
      position: relative
      bottom: 0
