.devices-panel
  min-height: 31rem
  max-height: 40rem
  height: 100%
  display: flex
  flex-direction: column

  &-outer-table
    height: 100%
    width: 100%

    &-header
      top: 0
      position: sticky
      background: var(--c-bg-neutral-min)
      z-index: 1

.scroll-gradient
  overflow: scroll

  scrollbar-width: none

  &::-webkit-scrollbar
    display: none
