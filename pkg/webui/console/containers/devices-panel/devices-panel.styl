.devices-panel
  min-height: 31rem
  display: flex
  flex-direction: column

  &-outer-table
    overflow-y: auto
    height: 23rem
    width: 100%
    table-layout: fixed
    scrollbar-width: none

    &::-webkit-scrollbar
      display: none

    &-header
      top: 0
      position: sticky
      background: var(--c-bg-neutral-min)
      z-index: 1

.scroll-gradient
  max-height: 23rem

  & > :last-child
    height: 3.5rem