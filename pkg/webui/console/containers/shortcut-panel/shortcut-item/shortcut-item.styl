.shortcut
  display: flex
  gap: $cs.m
  flex-direction: column
  align-items: center
  justify-content: center
  padding: $cs.s $cs.m
  text-decoration: none
  height: 9rem
  border-radius: $br.l
  background: var(--c-bg-brand-normal)
  color: var(--c-text-neutral-min)
  font-size: $fs.m
  font-weight: $fw.bold
  transition: $ad.s background ease-in-out
  -webkit-appearance: none
  border: 0

  &-title-wrapper
    width: 100%
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    text-wrap: wrap
    text-align: center
    gap: $cs.m
    transition: $ad.s opacity ease-in-out

    span
      line-height: normal

  span.icon
    font-size: 2rem

  &:hover
    cursor: pointer
    background: var(--c-bg-brand-normal-hover)

    span.icon
      font-size: 2rem
