.notification-panel
  height: 100%
  min-height: 26rem
  &-title, &-preview
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

  &-preview
    margin-top: $cs.xxs
    font-weight: $fwv2.regular
    color: var(--c-text-neutral-light)

  &-total
    color: var(--c-text-neutral-min)
    background-color: var(--c-bg-brand-normal)
    padding: $cs.xxs $cs.xs
    line-height: 1
    border-radius: $br.xxs

.status
  position: absolute
  top: 0
  left: 0

.name-header
  padding-left: $cs.m + $cs.s
