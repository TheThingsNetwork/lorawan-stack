.configuration-section
  display: flex
  justify-content: flex-start
  flex-direction: row

  .select
    width: auto
    padding-right: $cs.s

    &.(:last-child)
      padding-right: 0

    &-xs
      flex-basis: $fiw.xs
    &-s
      flex-basis: $fiw.s

  +media-query($bp.sm)
    flex-direction: column

    .select
      padding-right: 0

      &-xs,
      &-s
        flex-basis: auto
