.tile-row
  align-items: stretch

.webhook-tile
  height: 100%
  box-sizing: border-box
  text-decoration: initial
  color: var(--c-text-neutral-heavy)
  text-align: center
  display: block
  overflow: hidden
  text-overflow: ellipsis
  padding: 2rem
  cursor: pointer
  transform: scale(1.0001) // Will fix jiggle in animation.
  background: var(--c-bg-neutral-min)
  box-shadow: 0 4px 30px 0 rgba(0, 0, 0, .08), inset 0 -1px 0 0 rgba(0, 0, 0, .11)
  border-radius: $br.xl
  transition: box-shadow .4s cubic-bezier(.25, .01, .07, 1), transform .4s cubic-bezier(.25, .01, .07, 1)
  +media-query($bp.sm)
    box-shadow: 0 4px 30px 0 rgba(0, 0, 0, .14), inset 0 -1px 0 0 rgba(0, 0, 0, .11)
    padding: 1.5rem .8rem
  +media-query($bp.md)
    padding: 2rem 2rem

  &:hover
    transform: scale(1.05)
    box-shadow: 0 4px 55px 0 rgba(0, 0, 0, .1), inset 0 -1px 0 0 rgba(0, 0, 0, .11)

  .name
    display: block
    font-size: $fs.l
    font-weight: $fw.bold
    line-height: 1.2
    margin-bottom: $cs.xs
    +media-query($bp.sm)
      font-size: $fs.m

  .description
    display: block
    line-height: 1.3
    overflow: hidden
    text-overflow: ellipsis

  .logo
    box-sizing: border-box
    padding: 0 1rem
    width: 100%
    height: 10rem
    object-fit: contain
    margin-bottom: $cs.m
    +media-query($bp.sm)
      padding: 0
      height: 7rem
